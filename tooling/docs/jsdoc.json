{
  "opts": {
    "template": "./node_modules/better-docs",
    "encoding": "utf8",
    "destination": "./docs/",
    "readme": "./docs-src/readme.md",
    "recurse": true,
    "verbose": true
  },
  "source": {
    "include": [ "./src" ],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/better-docs/category"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "search": true,
    "default": {
      "staticFiles": {
        "include": [
          "./docs-src/styles",
          "./docs-src/summary.md"
        ]
      }
    },
    "better-docs": {
      "name": "ScriptX.Services Client Library",
      "title": "ScriptX.Services Client Library",
      "css": "style.css",
      "hideGenerator": true,
      "navLinks": [
        {
          "label": "Github",
          "href": "https://github.com/MeadCo/ScriptX.Print.Client"
        },
        {
          "label": "Then to now walk through",
          "href": "https://www.meadroid.com/Developers/KnowledgeBank/HowToGuides/ScriptXServices/ThenToNow"
        },
        {
          "label": "Samples",
          "href": "https://scriptxprintsamples.meadroid.com"
        }
      ]
    }
  }

}