@page
@{
    ViewData["Title"] = "Service desciption";
}


<h1>@ViewData["Title"]</h1>

@section Scripts {
    <environment include="Development">
        <script asp-append-version="true" src="/scripts?name=src/meadco-core.js"></script>
        <script asp-append-version="true" src="/scripts?name=src/meadco-scriptxprint.js"></script>
    </environment>
    <environment exclude="Development">
        <script asp-append-version="true" src="/scripts?name=dist/meadco-scriptxservicesprint.min.js"></script>
    </environment>
}

@section TestScripts {
    <script src="~/js/UnitTests/serverinfo.js" asp-append-version="true"></script>
    <script asp-append-version="true" src="~/js/UnitTests/servicedescription.js"></script>
}
